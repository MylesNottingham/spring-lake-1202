<section id="page-title">
  <h1><%= @mechanic.name%></h1>
  <p>Years of Experience: <%= @mechanic.years_experience %></p>
<section>
<br/>

<section id="current-rides">
  <h3>Current rides they're working on:</h3>
  <% @mechanic.rides.each do |ride| %>
    <h4><%= ride.name %></h4>
  <% end %>
</section>
<br/>

<section id="add-ride">
  <%= form_with(url:ride_mechanics_path(@mechanic), method: :post, local: true) do |form| %>
    <%= form.label :ride_id, "Add a ride to workload by Ride ID:" %>
    <%= form.number_field :ride_id, id: "ride_id" %>
    <%= form.hidden_field :mechanic_id, value: @mechanic.id %>
    <%= form.submit "Submit" %>
  <% end %>
</section>
